@model IEnumerable<App.Entities.Base.Marca>

@{ ViewBag.Title = "Lista de Marcas";}

<h2>Lista de Marcas</h2>

@*<a class="btn btn-success" href="/Categoria/Create">Nueva Categoría</a>*@
@Html.ActionLink("Nueva Marca", "Create", "Marca", new { @class = "btn btn-success" })
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.MarcaID})">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>

                </td>
            </tr>
        }

    </tbody>
</table>
