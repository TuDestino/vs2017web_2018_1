
@model IEnumerable<App.Entities.Base.Producto>

@{ ViewBag.Title = "Index";}

<h2>Lista de Productos</h2>

@using (Html.BeginForm())
{
    <label>Buscar por Nombre</label>
    <input type="text" name="filterByName" value="@ViewBag.filterByName" />
    <br />
    <label>Buscar por Categoría</label>
    @Html.DropDownList("filterByCategoria", new SelectList(ViewBag.Categorias, "CategoriaId", "Nombre")
                            , "Todos", new { @class = "form-control" })
    <br />
    <label>Buscar por Marca</label>
    @Html.DropDownList("filterByMarca", new SelectList(ViewBag.Marcas, "MarcaId", "Nombre")
                            , "Todos", new { @class = "form-control" })
    <button class="btn btn-primary">Buscar</button>

}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Código</td>
            <td>Nombre</td>
            <td>Categoría</td>
            <td>Marca</td>
            <td>Precio Mayor</td>
            <td>Precio Menor</td>
            <td>Stock Actual</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductoCode</td>
                <td>@item.Nombre</td>
                <td>@item.Categoria.Nombre</td>
                <td>@item.Marca.Nombre</td>
                <td>@item.PrecioMayor</td>
                <td>@item.PrecioMenor</td>
                <td>@item.StockActual</td>
            </tr>
        }
    </tbody>
</table>

